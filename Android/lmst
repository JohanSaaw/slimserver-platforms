#!/bin/bash
pkg upgrade
apt -y install proot proot-distro wget
termux-setup-storage
proot-distro install debian

rm installlms
cat <<EOF > installlms
#!/bin/bash
apt -y update
apt -y upgrade
apt -y install bash-completion jq apt-utils whiptail nano wget
rm logitechmediaserver*.deb
rm servers.json
wget https://lms-community.github.io/lms-server-repository/servers.json
deb=\$(jq -r '.latest.deb.url' servers.json)
wget "\$deb"
apt -y install ./logitechmediaserver*.deb
EOF

proot-distro login --termux-home debian



